{
    "clearMocks": true,
    "collectCoverageFrom": ["**/*.ts"],
    "coverageDirectory": "./coverage",
    "coverageReporters": ["text", "lcov", "clover", "html"],
    "coveragePathIgnorePatterns": ["/node_modules/", "./build/", "index.js", "/coverage/", "/config/"],
    "displayName": {
        "name": "CLIENT",
        "color": "blue"
    },
    "notify": true,
    "notifyMode": "always",
    "preset": "ts-jest",
    "resetMocks": false,
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["/node_modules/", "./build/"],
    "verbose": true
}

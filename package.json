{
  "name": "node-ts-jest-boilerplate",
  "version": "0.0.1",
  "description": "This is a boilerplate for Node JS with Typescript, Jest and supertest.",
  "main": "index.js",
  "typings": "./global.d.ts",
  "scripts": {
    "start": "nodemon index.ts",
    "build": "tsc",
    "eslint:check": "eslint **/*.ts",
    "eslint:fix": "eslint **/*.ts --fix",
    "prettier:check": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "test": "jest --config=./jest-config.json --detectOpenHandles --forceExit",
    "test:coverage": "jest --config=./jest-config.json --coverage --detectOpenHandles --forceExit",
    "test:watch": "jest --config=./jest-config.json --watchAll",
    "test:watch-coverage": "jest --config=./jest-config.json --coverage --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint:check && npm run prettier:check",
      "pre-push": "npm run test"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.1",
    "node-mocks-http": "^1.10.1",
    "node-notifier": "^10.0.0",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.4.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/http-status": "^1.1.2",
    "@types/joi": "^17.2.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.6.0",
    "http-status": "1.5.0",
    "joi": "^17.4.0",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1"
  }
}
